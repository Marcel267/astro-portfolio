---
import BaseLayout from "../layouts/BaseLayout.astro";
// import HorizontalCard from "../components/MoroseumCard.astro";
import MoroseumCard from "../components/MoroseumCard.astro";
import NextTodoCard from "../components/NextTodoCard.astro";
import SymfonyCard from "../components/SymfonyCard.astro";
import FriendCard from "../components/FriendCard.astro";
---

<BaseLayout title="Projekte" sideBarActiveItemID="projects">
	<div>
		<div class="text-3xl w-full font-bold mb-5">Meine letzten Projekte</div>
	</div>

	<MoroseumCard
		id="1"
		title="Moroseum"
		img="/moroseum/1.png"
		desc="Schulprojekt: Webanwendung mit Datenbankanbindung und Fokus auf UI und UX. Beinhaltet Autorisierung und Authentifizierung von Kunden mittels NextAuth.js und ein Ticketbestellsystem."
		url="https://github.com/Marcel267/museum"
		badge="NEW"
		tags={["Next.js", "Prisma", "MySQL"]}
		folder="moroseum"
		imgCount="6"
	/>
	<div class="divider my-0"></div>
	<NextTodoCard
		id="2"
		title="Next Todo"
		img="/next_todo/1.png"
		desc="Einfache Next.js Todo-App mit Datenbankanbindung."
		url="https://github.com/Marcel267/next_todo"
		tags={["Next.js", "Prisma", "MySQL"]}
	/>
	<div class="divider my-0"></div>
	<!-- <SymfonyCard
		id="3"
		title="Symfony Marketing-Website"
		img="/moroseum/1.png"
		desc="Multi-Page Marketing-Website, gebaut mit Symfony und Flowbite."
		url="https://github.com/Marcel267/symfony_marketing"
		tags={["Symfony", "TailwindCSS", "Flowbite"]}
	/> -->
	<!-- <div class="divider my-0"></div> -->
	<FriendCard
		id="4"
		title="Freunde-Kartei"
		img="/kartei/1.png"
		desc="Schulprojekt: CRUD-Webandwendung, um Freunde und ihre Adressen zu verwalten."
		url="https://github.com/Marcel267/kartei"
		tags={["PHP", "TailwindCSS", "Flowbite"]}
	/>
</BaseLayout>
